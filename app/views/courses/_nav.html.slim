.search-nav
  h3.italic Course Search

  == form_tag '/courses/search', method: 'POST', class: 'search-form'
  
    .term-select-wrapper
      select.term-select.dropdown.dark.full name="term"
        - Course.terms.each do |t|
          option value=(t) selected=(filter_option_state(:term, t))
            == t.split('_').join(' ')

    .box
      label Keywords
      .query-box.full
        == text_field_tag  'keywords', @keywords, placeholder: 'Keyword', class: 'keyword-box'

        br

        select.multiple.dropdown multiple="multiple" style="width:100%" name='keyword_options[]'
          - Course.keyword_options_map.each do |key, opts|
            option value=(key) selected=(filter_option_state(:keyword_option, key))
              == opts[:display]

        br

    hr
  
